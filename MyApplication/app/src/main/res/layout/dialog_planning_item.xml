<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_row_simple"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/planning_course_name"
        android:layout_width="wrap_content"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="نام درس"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="استاد"
        android:textColor="@color/black"
        android:textSize="14dp"

        app:layout_constraintEnd_toEndOf="@+id/planning_course_name"
        app:layout_constraintTop_toBottomOf="@+id/planning_course_name" />

    <TextView
        android:id="@+id/exam_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"

        android:text="امتحان"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/instructor"
        app:layout_constraintTop_toBottomOf="@+id/day_of_week" />


    <TextView
        android:id="@+id/class_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/font"
        android:text="ساعت کلاس"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/day_of_week"
        app:layout_constraintTop_toTopOf="@+id/day_of_week" />

    <TextView
        android:id="@+id/day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="16dp"
        android:fontFamily="@font/font"
        android:text="روز هفته"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructor" />





</androidx.constraintlayout.widget.ConstraintLayout>